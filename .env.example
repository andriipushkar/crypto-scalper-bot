# =============================================================================
# Binance API Keys
# =============================================================================
# Get from: https://testnet.binancefuture.com/
# For live: https://www.binance.com/en/my/settings/api-management

# Testnet (start here)
BINANCE_TESTNET_API_KEY=your_testnet_api_key_here
BINANCE_TESTNET_API_SECRET=your_testnet_api_secret_here

# Production (only after successful paper trading)
BINANCE_API_KEY=your_production_api_key_here
BINANCE_API_SECRET=your_production_api_secret_here

# Environment
ENVIRONMENT=testnet  # testnet or production

# =============================================================================
# Security Settings
# =============================================================================

# Master password for encrypting API keys (required for encryption feature)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
MASTER_PASSWORD=

# Salt for key derivation (change this for your deployment)
ENCRYPTION_SALT=trading_bot_salt_v1

# JWT secret for dashboard authentication
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=

# Dashboard admin credentials (CHANGE THESE!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme123

# API key for programmatic access to dashboard
# Generate with: python -c "from src.utils.security import generate_api_key; print(generate_api_key())"
DASHBOARD_API_KEY=

# =============================================================================
# Dashboard Settings
# =============================================================================

# Enable/disable API documentation (disable in production)
ENABLE_DOCS=true

# Require authentication for API endpoints
REQUIRE_AUTH=false

# Allowed CORS origins (comma-separated, use * for development only)
CORS_ORIGINS=*

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# Telegram Notifications (optional)
# =============================================================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
TELEGRAM_ENABLED=false

# =============================================================================
# Mobile Push Notifications (optional)
# =============================================================================

# Pushover - https://pushover.net/
# Best for: Simple mobile push notifications with no app required
PUSHOVER_APP_TOKEN=
PUSHOVER_USER_KEY=

# NTFY.sh - https://ntfy.sh/
# Best for: Self-hosted option, works with any device
# Free and open-source, no account required
NTFY_TOPIC=your-unique-topic-name
NTFY_SERVER=https://ntfy.sh
NTFY_TOKEN=

# Firebase Cloud Messaging (FCM)
# Best for: Custom mobile app integration
# Requires Firebase project and mobile app setup
FIREBASE_SERVER_KEY=

# =============================================================================
# Multi-Exchange Support (optional)
# =============================================================================

# Bybit - https://www.bybit.com/
BYBIT_TESTNET_API_KEY=
BYBIT_TESTNET_API_SECRET=
BYBIT_API_KEY=
BYBIT_API_SECRET=

# OKX - https://www.okx.com/
# Note: OKX requires a passphrase in addition to API key/secret
OKX_TESTNET_API_KEY=
OKX_TESTNET_API_SECRET=
OKX_PASSPHRASE=
OKX_API_KEY=
OKX_API_SECRET=

# Kraken Futures - https://futures.kraken.com/
# Testnet: https://demo-futures.kraken.com/
KRAKEN_TESTNET_API_KEY=
KRAKEN_TESTNET_API_SECRET=
KRAKEN_API_KEY=
KRAKEN_API_SECRET=

# KuCoin Futures - https://www.kucoin.com/futures/
# Note: KuCoin requires a passphrase in addition to API key/secret
# Testnet: https://sandbox-api.kucoin.com/
KUCOIN_TESTNET_API_KEY=
KUCOIN_TESTNET_API_SECRET=
KUCOIN_PASSPHRASE=
KUCOIN_API_KEY=
KUCOIN_API_SECRET=

# Gate.io Futures - https://www.gate.io/futures_trade/USDT/BTC_USDT
# Testnet: https://www.gate.io/testnet
GATEIO_TESTNET_API_KEY=
GATEIO_TESTNET_API_SECRET=
GATEIO_API_KEY=
GATEIO_API_SECRET=

# =============================================================================
# Telegram Bot Commands (optional)
# =============================================================================
# Comma-separated list of Telegram user IDs allowed to use commands
TELEGRAM_ALLOWED_USERS=
# Comma-separated list of admin user IDs (can start/stop trading)
TELEGRAM_ADMIN_USERS=

# =============================================================================
# Webhook API (optional)
# =============================================================================
# Passphrase required for webhook authentication
WEBHOOK_PASSPHRASE=
# Secret key for HMAC signature verification
WEBHOOK_SECRET_KEY=
# Comma-separated list of allowed IP addresses (empty = allow all)
WEBHOOK_ALLOWED_IPS=
# Require signature verification
WEBHOOK_REQUIRE_SIGNATURE=false

# =============================================================================
# Sentiment Analysis APIs (optional)
# =============================================================================

# LunarCrush - https://lunarcrush.com/
# Social sentiment data
LUNARCRUSH_API_KEY=

# CryptoPanic - https://cryptopanic.com/
# News sentiment data
CRYPTOPANIC_API_KEY=

# Glassnode - https://glassnode.com/
# On-chain metrics (premium)
GLASSNODE_API_KEY=
